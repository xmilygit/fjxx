  </ul>
</div>
{{else}}
<!--登录部分-->
  <form action='/login' class="navbar-form navbar-right" role="form" method="post">
    <div class="form-group">
      <input type="text" placeholder="手机号" class="form-control" name="username">
    </div>
    <div class="form-group">
      <input type="password" placeholder="密码" class="form-control" name="password">
    </div>
    <button type="submit" class="btn btn-success">登录</button>
  </form>
